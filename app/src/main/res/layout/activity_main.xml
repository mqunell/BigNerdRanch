<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical" >

    <Button
        android:id="@+id/main_button_geoquiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/geo_quiz"
        android:onClick="quiz_activity_button" />

    <Button
        android:id="@+id/main_button_criminalintent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/criminal_intent"
        android:onClick="criminal_activity_button" />

</LinearLayout>
